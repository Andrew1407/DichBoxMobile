<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DichBoxMobile" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DynarShadowCFont">
        <item name="fontFamily">@font/dynar_shadow_c</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="signSubmitStyle">
        <item name="android:background">@drawable/sign_submit_btn_inactive</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="signTypeStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">35dp</item>
        <item name="android:background">@drawable/sign_inactive</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="inputStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColorHint">@color/light0_blue</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="signArea">
        <item name="android:layout_marginTop">150dp</item>
        <item name="android:layout_height">350dp</item>
    </style>

    <style name="warningStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginEnd">35dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:layout_height">41dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/crimson</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

</resources>