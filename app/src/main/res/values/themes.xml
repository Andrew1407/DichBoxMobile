<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DichBoxMobile" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DynarShadowCFont">
        <item name="fontFamily">@font/dynar_shadow_c</item>
        <item name="android:textSize">42sp</item>
    </style>

    <style name="signSubmitStyle">
        <item name="android:background">@drawable/sign_submit_btn_inactive</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="signTypeStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:background">@drawable/sign_inactive</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="warningStyle">
        <item name="android:layout_width">341dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/crimson</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="profileInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">23sp</item>
        <item name="fontFamily">@font/times_new_roman400</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="editBtnStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/sign_submit_btn_inactive</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="colorPickerTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/color_picker</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/color_picker</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_weight">1.0</item>
    </style>

    <style name="emptyList">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">30dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="settingsOptions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/light_blue</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">26sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:background">@drawable/settings_separator</item>
    </style>

    <style name="dialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/color_picker</item>
        <item name="android:textColor">@color/purple</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColorPrimary">@color/purple</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="buttonBarNegativeButtonStyle">@style/buttonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/buttonStyle</item>
    </style>

</resources>